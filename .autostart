# Zsh auto-cd hook configuration
# Add this to your ~/.zshrc to enable automatic project startup

# Function to auto-start uvniche project
autostart_uvniche() {
    if [[ "$PWD" == "/Users/avaneesh/uvniche/uvniche" ]]; then
        echo "ðŸŽ¯ Detected uvniche project directory"
        
        # Check if dev server is already running
        if ! pgrep -f "next dev" > /dev/null; then
            echo "ðŸš€ Starting uvniche dev server..."
            
            # Install dependencies if needed
            if [ ! -d "node_modules" ]; then
                echo "ðŸ“¦ Installing dependencies..."
                npm install
            fi
            
            # Start dev server in background
            nohup npm run dev > /dev/null 2>&1 &
            echo "âœ… Dev server started! Visit http://localhost:3000"
        else
            echo "âœ… Dev server already running!"
        fi
    fi
}

# Hook function to run when changing directories
chpwd() {
    autostart_uvniche
}

# Instructions for manual setup:
# 1. Add the above functions to your ~/.zshrc
# 2. Restart your terminal or run: source ~/.zshrc
# 3. Navigate to the project directory to auto-start
